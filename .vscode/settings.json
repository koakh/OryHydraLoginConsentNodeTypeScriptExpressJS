{
  "editor.formatOnSave": false,
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "cSpell.words": [
    "APIKEY",
    "CCARD",
    "foobot",
    "koakh",
    "Kuartzo",
    "oidc",
    "oryd",
    "Parens",
    "tailwindcss",
    "twind",
    "urljoin",
    "zoneinfo"
  ],
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/.dart_tool": true,
    ".flatpak": true
  }
}
