<input 
  class="form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-brandBlueDark checked:border-brandBlueDark focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer"
  type="checkbox"
  id="<%= fieldId ? fieldId : '' %>"
  name="<%= fieldName ? fieldName : '' %>"
  value="<%= fieldValue ? fieldValue : '' %>"
/>
<label class="form-check-label inline-block text-gray-800" for="<%= fieldId ? fieldId : '' %>">
  <%= fieldLabel ? fieldLabel : '' %>
</label>
